<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
<Dialog title="Create Employee">
    <f:SimpleForm>
        <f:content>
            <Label text="Employee Name"/>
            <Input value="{employeeObj>/EmployeeName}"/>
            <Label text="Team"/>
            <Input value="{employeeObj>/Team}"/>
            <Label text="Employee Role"/>
            <Input value="{employeeObj>/EmployeeRole}"/>
        </f:content>
    </f:SimpleForm>
    <beginButton>
        <Button text="Save" press="onSaveEmployee"/>
    </beginButton>
    <endButton>
    <Button text="Cancel" press="onCancelEmployee"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>
 