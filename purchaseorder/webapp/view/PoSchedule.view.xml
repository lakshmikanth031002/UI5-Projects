<mvc:View controllerName="purchaseorder.controller.PoSchedule"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="SchedulePage" title="Schedule Line Details">
        <Table id="ScheduleTable" items="{oScheduleJson>/}" >
        <!-- growing="true" growingThreshold="10" -->
        <columns>
            <Column>
            <Text text="Purchasing Document Number"/>   
            </Column>
            <Column>
            <Text text="Item Number"/>   
            </Column>
            <Column>
            <Text text="Schedule Line Number"/>   
            </Column>
            <Column>
            <Text text="Category"/>   
            </Column>
            <Column>
            <Text text="Delivery Date"/>   
            </Column>
            <Column>
            <Text text="Scheduled Quantity"/>   
            </Column>
            <Column>
            <Text text="Delivery Date"/>   
            </Column>
            <Column>
            <Text text="Order Date"/>   
            </Column>
        </columns>
        <items>
        <ColumnListItem>
        <cells>
            <Text text="{oScheduleJson>Ponumber}"/>
            <Text text="{oScheduleJson>Poitem}"/>
            <Text text="{oScheduleJson>Schedline}"/>
            <Text text="{oScheduleJson>Deldatcatext}"/>
            <Text text="{ path : 'oScheduleJson>Deliverydate',
                  type: 'sap.ui.model.type.Date',
                  formatOptions: { pattern : 'dd/mm/yyyy'}}"/>
            <Text text="{oScheduleJson>Quantity}"/>
            <Text text="{path: 'oScheduleJson>Statdate',
                  type: 'sap.ui.model.type.Date',
                  formatOptions: { pattern : 'dd/mm/yyyy'}}"/>
            <Text text="{path: 'oScheduleJson>Podate',
                  type: 'sap.ui.model.type.Date',
                  formatOptions: { pattern : 'dd/mm/yyyy'}}"/>
        </cells>
        </ColumnListItem>
        </items>              
        </Table>
    </Page>
</mvc:View>