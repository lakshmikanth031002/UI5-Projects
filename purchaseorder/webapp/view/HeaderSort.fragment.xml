
<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:l="sap.ui.layout">

<Dialog title="Header Sorting">
    <f:SimpleForm>
        <f:content>
			<ComboBox id="myComboBox" selectionChange="onSelectionChangeHeader">
                <items>
                    <core:ListItem key="Ponumber"   text="Purchasing Document Number"/>
                    <core:ListItem key="Compcode"   text="Company Code"/>
                    <core:ListItem key="Doctype"    text="Purchasing Document Type"/>
                    <!-- <core:ListItem key="Status"     text="Status"/> -->
                    <!-- <core:ListItem key="CreatDate"  text="Created Date"/> -->
                    <!-- <core:ListItem key="CreatedBy"  text="Created By"/> -->
                    <!-- <core:ListItem key="Pmnttrms"   text="Item Number Interval"/> -->
                    <core:ListItem key="Vendor"     text="Supplier"/>
                    <core:ListItem key="Purchorg"   text="Purchasing Organization"/>
                    <core:ListItem key="Purgroup"   text="Purchasing Group"/>
                    <core:ListItem key="Currency"   text="CurrencyKey"/>
                    <!-- <core:ListItem key="ExchRate"   text="Exchange Rate"/>
                    <core:ListItem key="DocDate"    text="Document Date"/>
                    <core:ListItem key="Subitemint" text="SubItems"/> -->

                </items>
			</ComboBox>
        </f:content>
    </f:SimpleForm>
	<RadioButtonGroup id="groupB">  
		<RadioButton id="Asc" text="Ascending" selected="true" />
		<RadioButton id="Desc" text="Descending" />
	</RadioButtonGroup>

    <beginButton>
        <Button text="Ok" press="onOk"/>
    </beginButton>
    <endButton>
        <Button text="Cancel" press="onCancel"/>
    </endButton>            
</Dialog>
</core:FragmentDefinition>
