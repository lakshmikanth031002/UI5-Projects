<mvc:View controllerName="purchaseorder.controller.PoHeader"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <Page id="HeaderPage" title="Header Details">
       <ScrollContainer id="scrollContainer"  horizontal="true"
                            class="sapUiContentPadding" width="100%">

            <smartTable:SmartTable id="SmartTable" initiallyVisibleFields="Ponumber,Compcode,Doctype,Status,Vendor,Purchorg,Purgroup,Currency,Exchrate"
                entitySet="PurchasingDocumentHeaderSet" smartFilterId="smartFilterBar"
                tableType="ResponsiveTable" enableExport="true"
                useVariantManagement="true" useTablePersonalisation="true"
                header="Header Details" showRowCount="true" 
                persistencyKey="SmartTableAnalytical_Explored" enableAutoBinding="true"
                enableAutoColumnWidth="true" class="sapUiResponsiveContentPadding">
                <smartTable:customToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                            <Button text="Item Details" press="onNavPOItemView"/>
                            <Button text="Create PO" icon="sap-icon://add" press="onCreatePO"/>
                            <!-- <Button text="Custom Action" icon="sap-icon://action" press=".onCustomActionPress"/>                 -->
                    </OverflowToolbar>
                </smartTable:customToolbar>
                <table:Table fixedColumnCount="3" selectionMode="Single" rowSelectionChange="onRowSelect">
                        <table:columns>
                        </table:columns>
                </table:Table>  
            </smartTable:SmartTable>

           </ScrollContainer>
    </Page>
</mvc:View>